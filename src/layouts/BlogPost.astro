---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: any;
  heroAlt?: string;
}

const { title, description, pubDate, updatedDate, heroImage, heroAlt = '' } = Astro.props;
---

<html lang="sv">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main { width: calc(100% - 2rem); margin: 0; }
      .hero { width: 100%; }
      .hero img { display: block; margin: 0 auto; border-radius: 12px; box-shadow: var(--box-shadow); }
      .prose { width: 720px; max-width: calc(100% - 2rem); margin: auto; padding: 1rem; color: rgb(var(--gray-dark)); }
      .title { margin-bottom: 1rem; padding: 1rem 0; text-align: center; line-height: 1; }
      .date { margin-bottom: .5rem; color: rgb(var(--gray)); }
      .last-updated { font-style: italic; }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <article>
        <div class="hero">
          {heroImage && <Image width={1020} height={510} src={heroImage} alt={heroAlt} />}
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              {pubDate.toLocaleDateString('sv-SE')}
              {updatedDate && (
                <div class="last-updated">Senast uppdaterad {updatedDate.toLocaleDateString('sv-SE')}</div>
              )}
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

---
/** BaseHead.astro – ren version utan Twitter/X */

import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  /** Sätt true på utkast/sidor du inte vill indexera */
  noindex?: boolean;
}

const { title, description, image = FallbackImage, noindex = false } = Astro.props;

// Bas-URL (kan vara undefined i dev). Vi försöker alltid generera absoluta länkar.
const site = Astro.site ?? new URL('/', 'http://localhost:4321');
const canonicalURL = new URL(Astro.url.pathname, site);

// Absolut bild-URL för sociala medier
const ogImage = new URL(image.src, site).toString();

// JSON-LD (enkel WebSite)
const websiteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: SITE_TITLE,
  url: site.toString(),
  inLanguage: 'sv-SE',
};
---

<!-- Anti-blink: helst allra först i head -->
<script>
  (function () {
    try {
      const stored = localStorage.getItem('theme');
      const prefers = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = stored ?? (prefers ? 'dark' : 'light');
      if (theme === 'dark') document.documentElement.classList.add('dark');
    } catch (_) {}
  })();
</script>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Hjälp UA förstå att båda teman finns -->
<meta name="color-scheme" content="light dark" />

<!-- Icons & PWA -->
<link rel="icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/icon-192.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<!-- Maskable ikoner -->
<link rel="icon" href="/icon-192.png" sizes="192x192" type="image/png" />
<link rel="icon" href="/icon-512.png" sizes="512x512" type="image/png" />

<!-- iOS PWA (valfritt) -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

<!-- Theme color -->
<meta name="theme-color" content="#8B0000" media="(prefers-color-scheme: light)" />
<meta name="theme-color" content="#111111" media="(prefers-color-scheme: dark)" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:alt" content={`Omslagsbild för ${SITE_TITLE}`} />

<!-- JSON-LD -->
<script type="application/ld+json">
  {JSON.stringify(websiteJsonLd, null, 2)}
</script>

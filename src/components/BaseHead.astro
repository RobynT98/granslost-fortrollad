---
/** BaseHead.astro – förbättrad version */

import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  /** Sätt true på utkast/sidor du inte vill indexera */
  noindex?: boolean;
}

const { title, description, image = FallbackImage, noindex = false } = Astro.props;

// Bas-URL (kan vara undefined i dev). Vi försöker alltid generera absoluta länkar.
const site = Astro.site ?? new URL('/', 'http://localhost:4321');
const canonicalURL = new URL(Astro.url.pathname, site);

// Absolut bild-URL för sociala medier
const ogImage = new URL(image.src, site).toString();

// Social handles (valfritt)
const twitterSite = '@dittkonto';   // ändra/ta bort om du vill
const twitterCreator = '@dittkonto'; // ändra/ta bort om du vill

// JSON-LD (enkel WebSite)
const websiteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: SITE_TITLE,
  url: site.toString(),
  inLanguage: 'sv-SE',
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Icons & PWA -->
<link rel="icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/icon-192.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<!-- Maskable ikon (Chrome/Android) -->
<link rel="icon" href="/icon-192.png" sizes="192x192" type="image/png" />
<link rel="icon" href="/icon-512.png" sizes="512x512" type="image/png" />


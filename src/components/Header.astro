---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header role="banner" aria-label="Main navigation">
  <div class="container inner">
    <a href="/" class="site-title">{SITE_TITLE}</a>

    <div class="right">
      <nav>
        <HeaderLink href="/">Hem</HeaderLink>
        <HeaderLink href="/blogg">Blogg</HeaderLink>
        <HeaderLink href="/om">Om</HeaderLink>
      </nav>

      <button
        id="theme-toggle"
        class="theme-btn"
        aria-label="Byt tema"
        aria-pressed="false"
        title="Byt tema"
      >
        ðŸŒ™
      </button>
    </div>
  </div>
</header>

<!-- Ladda scriptet frÃ¥n public/ -->
<script src="/theme.js" defer></script>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,.05);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .inner { display:flex; align-items:center; justify-content:space-between; min-height:64px; }
  .right { display:flex; align-items:center; gap:.75rem; }
  .site-title { font-size:1.2rem; font-weight:800; color:var(--ink); text-decoration:none; padding:.8em 0; }
  nav { display:flex; align-items:center; gap:1rem; }

  .theme-btn{
    background:none; border:0; cursor:pointer; font-size:1.15rem; line-height:1;
    color:var(--ink); padding:.4rem .5rem; border-radius:8px;
    transition: background .15s ease, color .15s ease, transform .1s ease;
  }
  .theme-btn:hover{ color:var(--brand); background:rgba(0,0,0,.04); }
  .theme-btn:active{ transform:translateY(1px); }
</style>

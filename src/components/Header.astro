---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header role="banner" aria-label="Main navigation">
  <div class="container inner">
    <a href="/" class="site-title">{SITE_TITLE}</a>
    <nav>
      <HeaderLink href="/">Hem</HeaderLink>
      <HeaderLink href="/blogg">Blogg</HeaderLink>
      <HeaderLink href="/om">Om</HeaderLink>
    </nav>
  </div>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #fff;
    box-shadow: 0 2px 8px rgba(var(--black), 0.05);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .site-title {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--black);
    text-decoration: none;
    padding: 0.8em 0;
  }

  nav {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 3px solid transparent;
    text-decoration: none;
    transition: border-color 0.2s ease, color 0.2s ease;
  }

  nav a:hover {
    border-bottom-color: var(--accent);
    color: var(--accent);
  }

  nav a.active {
    border-bottom-color: var(--accent);
    font-weight: 600;
  }

  /* Mobil: stapla */
  @media (max-width: 720px) {
    nav {
      font-size: 0.95rem;
      gap: 0.5em;
    }
  }
</style>

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="sv">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .hero {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: clamp(2rem, 4vw, 4rem) 1rem;
      }
      .card {
        background: var(--card, #fff);
        border-radius: 12px;
        box-shadow: var(--box-shadow, 0 12px 40px rgba(0,0,0,.12));
        padding: clamp(1.25rem, 3vw, 2rem);
        max-width: 32rem;
        margin: auto;
        transition: transform .18s ease, box-shadow .18s ease;
      }
      .title { display:flex; flex-direction:column; align-items:center; gap:.5rem; }
      .title img { width:72px; height:72px; }
      h1 { margin:.5rem 0 1rem; font-size:clamp(1.6rem,2.4vw,2rem); }
      p  { margin:.5rem 0; }
      .btn {
        display:inline-block; margin-top:1rem; padding:.75rem 1.5rem;
        background: var(--accent, var(--brand, #c1121f)); color:#fff;
        border-radius:8px; text-decoration:none; font-weight:700;
        box-shadow:0 8px 20px rgba(0,0,0,.14);
        transition: background .2s ease, transform .18s ease, box-shadow .18s ease;
      }
      .btn:hover { background: #a60000; transform: translateY(-1px); }
      .btn:visited { color:#fff; }
      .btn:focus-visible { outline:3px solid #f1b; outline-offset:2px; }
    </style>
  </head>
  <body>
    <Header />

    <main>
      <section class="container hero">
        <div class="card" style="text-align:center;">
          <div class="title">
            <img src="/icon-192.png" alt="Logotyp för Gränslöst Förtrollad" />
            <h1>Hej, välkomna!</h1>
          </div>
          <p>Välkomna till <strong>Gränslöst Förtrollad</strong></p>
          <p>Detta är min första egna blogg!</p>
          <a href="/blogg" class="btn" aria-label="Gå till bloggen">Läs bloggen</a>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
